<Window x:Class="Student_Status_Management_2._0.Window.ShowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Status_Management_2._0.Window"
        mc:Ignorable="d"
        Title="显示学生信息" Height="450" Width="800">
    <Grid x:Name="ShowWindow1">
        <TextBox x:Name="ShowText"  HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="780" RenderTransformOrigin="0.5,0.5" Height="415" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" FontSize="22">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0"/>
                    <RotateTransform/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>


    </Grid>
</Window>
